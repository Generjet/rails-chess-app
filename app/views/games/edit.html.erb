<%= link_to 'End match and return to homepage', game_path(@game), method: :delete %>
<br />

<%= current_user.email %>
<br />
<% player = "player_1" %>
<% if @game.user != current_user %>
  <% player = "player_2" %>
<% end %>

<% if player == 'player_1' %>
  <%= "This user is the match host" %>
<% end %>

<% if player == 'player_2' %>
  <%= "this user is the match guest" %>
<% end %>

<%= react_component("Game", {id: @game.id, player: player}) %>
