<%= link_to 'Return to homepage', root_path %>
<br />
<%= link_to "Start a new game", new_game_path %>
<br /><br />

<h3>Pick a chess match to join</h3>

<% @games.each do |game| %>
  <% if !game.player_1.length.zero? && game.player_2.length.zero? %> 
    <% if !game.nil? %>
      <%= link_to "Hosted by " + game.user.email,  edit_game_path(game)%>
    <% end %>
    <br />
  <% end %>
  <br/>
<% end %>
