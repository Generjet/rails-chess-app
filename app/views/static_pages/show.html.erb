<div class="text-center make-it-green">
  <h2>Chess App by Andy Strube</h2>
  <h3>You need to be signed in to use this app</h3>

  <% if current_user %>
    <%= link_to "Start a new game", new_game_path, class: 'make-it-green' %>
    <br />
    <%= link_to 'Go to games lobby', index_path, class: 'make-it-green' %>
    <br/>
    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'make-it-green' %>
  <% end %>

  <% if !current_user %>
    <%= link_to 'Log in', new_user_session_path, class: 'make-it-green' %>
    <br />
    <%= link_to 'Sign up', new_user_registration_path, class: 'make-it-green' %>
  <% end %>

</div>
